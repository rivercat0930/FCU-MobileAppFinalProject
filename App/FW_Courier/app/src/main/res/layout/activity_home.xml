<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/home_list_lv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/home_image_logo"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            tools:srcCompat="@drawable/everyone_must_eat_rice" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_tv_title"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="今天的飯 你來選擇"
                android:textColorHint="#120E13"
                android:textSize="24sp" />

            <Button
                android:id="@+id/home_btn_history"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="看看你過去吃過的飯" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/home_list_lv"
        android:layout_width="347dp"
        android:layout_height="478dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>