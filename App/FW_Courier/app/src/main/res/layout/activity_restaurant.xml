<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">

    <TextView
        android:id="@+id/restaurant_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目前訂單"
        android:textSize="28sp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurant_lv_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <ListView
        android:id="@+id/restaurant_lv_order"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurant_btn_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/restaurant_btn_setting"
        android:layout_width="148dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:text="管理你賣的飯"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>