<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantSigninActivity">

    <TextView
        android:id="@+id/restaurantsignin_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="讓我們一起給大家都吃到飯"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantsignin_tv_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

    <TextView
        android:id="@+id/restaurantsignin_tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="帳號"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantsignin_et_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/restaurantsignin_et_account"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="請輸入商家帳號"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/restaurantsignin_tv_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restaurantsignin_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="密碼"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantsignin_et_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/restaurantsignin_et_password"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="請輸入商家密碼"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/restaurantsignin_btn_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/restaurantsignin_btn_signin"
        android:layout_width="301dp"
        android:layout_height="58dp"
        android:layout_marginBottom="20dp"
        android:text="讓大家吃到飯!!!"
        app:layout_constraintBottom_toTopOf="@+id/restaurantsignin_btn_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/restaurantsignin_btn_register"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:layout_marginBottom="150dp"
        android:text="沒有帳號?現在就加入我們"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>