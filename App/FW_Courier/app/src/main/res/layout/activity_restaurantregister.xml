<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantRegisterActivity">

    <TextView
        android:id="@+id/restaurantregister_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="\t\t\t\t\t\t\t\t\t現在註冊\n跟我們一起讓大家吃到飯"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:id="@+id/restaurantregister_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="商家名稱"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_et_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/restaurantregister_et_name"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="請輸入你的店家名稱"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_tv_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restaurantregister_tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="帳號"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_et_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/restaurantregister_et_account"
        android:layout_width="301dp"
        android:layout_height="49dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="請輸入你的帳號"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_tv_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restaurantregister_tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="密碼"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_et_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/restaurantregister_et_password"
        android:layout_width="298dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="請輸入你的密碼"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_tv_password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restaurantregister_tv_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="確認密碼"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_et_password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/restaurantregister_et_password2"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginBottom="12dp"

        android:ems="10"
        android:hint="請再輸入一次"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/restaurantregister_btn_rigister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/restaurantregister_btn_rigister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="確定加入"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>